{
	"compilerOptions": {
		"target": "es6",
		"module": "CommonJS",
		"lib": ["es2015"],
		"declaration": true,
		"sourceMap": true,
		"allowJs": true,
		"outDir": "./build",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": [
			"node"
		]
	},
	"include": ["./index.ts", "./lib/**/*", "./src/**/*", "./main.ts"],
	"exclude": [
		"node_modules",
	]
}
